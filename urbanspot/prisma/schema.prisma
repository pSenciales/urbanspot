generator client {
  provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
}

enum TagEnum {
  MOVILIDAD       @map("movilidad")
  CULTURA         @map("cultura")
  NATURALEZA      @map("naturaleza")
  OCIO            @map("ocio")
  TURISMO         @map("turismo")
  OTROS            @map("otros")
}

model User {
  id                  Int      @id @default(autoincrement())
  name                String? 
  email               String 
  provider            String 

  @@unique([email, provider])

  image               String?   
  pointsExplorer      Int  @default(0)
  pointsPhotographer  Int @default(0)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  POIs                POI[]    @relation("UserPOIs")
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  metadata  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  poiId     Int
  poi       POI      @relation("ImagePOIs", fields: [poiId], references: [id])
}

model POI {
  id              Int       @id @default(autoincrement())
  name            String
  description     String
  tags            Tag[]     @relation("tagPOIs")
  locationLat     Float
  locationLng     Float
  ratings         Int       @default(0)
  averageRating   Float     @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  authorId        Int
  author          User      @relation("UserPOIs", fields: [authorId], references: [id])
  images          Image[]   @relation("ImagePOIs")
}

model Tag{
  tag       TagEnum

  poiId     Int 
  poi       POI     @relation("tagPOIs", fields:[poiId], references:[id])

  @@id([poiId, tag])
}
